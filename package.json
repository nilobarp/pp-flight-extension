{
  "name": "flight",
  "displayName": "Flight",
  "description": "Navigate NestJS CQRS patterns and Cucumber BDD scenarios with ease",
  "version": "0.2.7",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:feature"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flight.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "nestjs-cqrs-navigator.goToHandler",
        "title": "Go to Handler"
      },
      {
        "command": "nestjs-cqrs-navigator.goToProvider",
        "title": "Go to Provider Implementation"
      },
      {
        "command": "nestjs-cqrs-navigator.goToStepDefinition",
        "title": "Go to Step Definition"
      },
      {
        "command": "flight.runScenario",
        "title": "Run Cucumber Scenario"
      },
      {
        "command": "flight.runScenarioWithProfile",
        "title": "Run Cucumber Scenario with Profile"
      },
      {
        "command": "flight.debugScenario",
        "title": "Debug Cucumber Scenario"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "flight.submenu",
          "group": "navigation",
          "when": "editorTextFocus && resourceLangId == typescript"
        },
        {
          "submenu": "flight.submenu",
          "group": "navigation",
          "when": "editorTextFocus && resourceExtname == .feature"
        }
      ],
      "flight.submenu": [
        {
          "command": "nestjs-cqrs-navigator.goToHandler",
          "group": "navigation",
          "when": "editorTextFocus && resourceLangId == typescript"
        },
        {
          "command": "nestjs-cqrs-navigator.goToProvider",
          "group": "navigation",
          "when": "editorTextFocus && resourceLangId == typescript"
        },
        {
          "command": "nestjs-cqrs-navigator.goToStepDefinition",
          "group": "navigation",
          "when": "editorTextFocus && resourceExtname == .feature"
        }
      ]
    },
    "submenus": [
      {
        "id": "flight.submenu",
        "label": "Fly to..."
      }
    ],
    "configuration": {
      "title": "Flight",
      "properties": {
        "flight.cucumber.profiles": {
          "type": "array",
          "default": ["cqrs", "api"],
          "description": "List of Cucumber profiles to organize tests by. Tests will be grouped under these profiles in the Test Explorer.",
          "items": {
            "type": "string"
          }
        },
        "flight.cucumber.defaultProfile": {
          "type": "string",
          "default": "cqrs",
          "description": "Default Cucumber profile to use when running tests from CodeLens buttons."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "echo \"y\" | npx vsce package --allow-missing-repository"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.0",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  }
}
